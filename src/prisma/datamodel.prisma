type User {
  id: ID! @id
  authId: String! @unique
  name: String
  picture: String
  profile: [ProfileField]!
}

type ProfileField {
  id: ID! @id
  user: User!
  value: String!
  type: ProfileFieldType!
  privacy: ProfileFieldPrivacy!
  preferredContact: Boolean @default(value: false)
}

enum ProfileFieldType {
  EMAIL
  PHONE
  SOCIAL
  AGE
  GENDER
  INDUSTRY
  JOBTITLE
  BIO
}

enum ProfileFieldPrivacy {
  PUBLIC
  PRIVATE
  CONNECTED
}