type User {
  id: ID! @id
  authId: String! @unique
  name: String
  picture: String
  birthdate: String
  location: String
  industry: String
  jobtitle: String
  bio: String
  profile: [ProfileField]!
  qrcodes: [QRCode]!
}

type ProfileField {
  id: ID! @id
  user: User!
  value: String!
  type: ProfileFieldType!
  privacy: ProfileFieldPrivacy!
  preferredContact: Boolean @default(value: false)
}

enum ProfileFieldType {
  EMAIL
  PHONE
  SMS
  INSTAGRAM
  FACEBOOK
  LINKEDIN
  TWITTER
}

enum ProfileFieldPrivacy {
  PUBLIC
  PRIVATE
  CONNECTED
}

# https://swaap.co/connect/:id
type QRCode {
  id: ID! @id
  label: String
  scans: Int @default(value: 0)
  user: User
}
