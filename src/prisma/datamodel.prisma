type User {
  id: ID! @id
  authId: String! @unique
  name: String
  picture: String
  birthdate: String
  location: String
  industry: String
  jobtitle: String
  bio: String
  profile: [ProfileField]!
  recievedRequests: [Request]! @relation(name: "RecievedRequests")
  sentRequests: [Request]! @relation(name: "SentRequests")
}

type ProfileField {
  id: ID! @id
  user: User!
  value: String!
  type: ProfileFieldType!
  privacy: ProfileFieldPrivacy!
  preferredContact: Boolean @default(value: false)
}

type Request {
  id: ID! @id
  sender: User! @relation(name: "SentRequests")
  recipient: User! @relation(name: "RecievedRequests")
}

enum ProfileFieldType {
  EMAIL
  PHONE
  SMS
  INSTAGRAM
  FACEBOOK
  LINKEDIN
  TWITTER
}

enum ProfileFieldPrivacy {
  PUBLIC
  PRIVATE
  CONNECTED
}